<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/background_navigationheader"
    android:orientation="vertical"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:id="@+id/circleImageView"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ic_navimage"
                android:layout_centerVertical="true"
                android:layout_gravity="center" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="20sp"
                    android:id="@+id/textViewHeaderName"
                    android:gravity="center_horizontal"
               />

                <TableRow
                    android:layout_below="@+id/textViewHeaderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="true"
                    android:id="@+id/tableRow"
                    android:gravity="center"
                    android:layout_alignParentRight="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                         android:text="@string/trackMyLocation"
                        android:textSize="20sp"
                        android:id="@+id/trackMyLocation"
                        android:gravity="center" />

                    <ToggleButton
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@drawable/toggle_selector"
                        android:layout_marginLeft="20dp"
                        android:text="New ToggleButton"
                        android:id="@+id/toggleButton_navigationview"
                        android:checked="true"
                        android:textOff=""
                        android:textOn=""/>
                </TableRow>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>